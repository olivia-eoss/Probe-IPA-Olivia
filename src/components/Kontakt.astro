---
import { MapPin, Phone } from "lucide-astro";
import { Image } from "astro:assets";
import kathrin from "../assets/kathrinkrake.jpg";
---

<section class="ms-contact">
  <h2>Ansprechpartnerin</h2>

  <div class="ms-personCard">
    <Image
      class="ms-personCard__img"
      src={kathrin}
      alt="Portrait von Kathrin Krake"
      width={160}
      height={160}
      loading="lazy"
    />

    <div class="ms-personCard__content">
      <h3>Kathrin Krake</h3>
      <p>Marketing / Sales & Business Development</p>

      <div class="ms-personCard__rows">
        <div class="ms-row">
          <MapPin size={18} aria-hidden="true" />
          <span>Bonn, Deutschland</span>
        </div>

        <a class="ms-row ms-row--link" href="tel:+4922850443610">
          <Phone size={18} aria-hidden="true" />
          <span>Tel.: +49 228 504436 10</span>
        </a>
      </div>
    </div>
  </div>

  <h2 class="ms-contact__spaceTop">Standorte</h2>

  <div class="ms-locations">
    <article class="ms-locCard">
      <div class="ms-locCard__grid">
        <MapPin class="ms-locCard__pin" size={22} aria-hidden="true" />

        <div class="ms-locCard__content">
          <h3>Hauptsitz Bonn</h3>
          <p>metas GmbH</p>

          <p class="ms-locCard__text">
            Godesberger Allee 105-107<br />
            53175 Bonn<br />
            Deutschland
          </p>

          <a class="ms-row ms-row--link" href="tel:+4922850443610">
            <Phone size={18} aria-hidden="true" />
            <span>+49 228 504436 10</span>
          </a>
        </div>
      </div>
    </article>

    <article class="ms-locCard">
      <div class="ms-locCard__grid">
        <MapPin class="ms-locCard__pin" size={22} aria-hidden="true" />

        <div class="ms-locCard__content">
          <h3>Hauptsitz Bonn</h3>
          <p>metas GmbH</p>

          <p class="ms-locCard__text">
            Godesberger Allee 105-107<br />
            53175 Bonn<br />
            Deutschland
          </p>

          <a class="ms-row ms-row--link" href="tel:+4922850443610">
            <Phone size={18} aria-hidden="true" />
            <span>+49 228 504436 10</span>
          </a>
        </div>
      </div>
    </article>
  </div>
</section>

<style>
  .ms-contact {
    max-width: 1100px;
    margin: 0 auto;
    padding: 12px 20px 80px; /* <- wichtig: seitliche Luft wie Bild 1 */
  }

  .ms-locCard__content,
  .ms-locCard__content p:first-of-type,
  .ms-locCard {
    margin-top: 0;
  }

  .ms-locations {
    margin-right: 0;
  }

  .ms-locCard__grid {
    display: grid;
    grid-template-columns: 34px 1fr; /* Icon | Inhalt */
    gap: 16px;
    align-items: start;
  }

  /* Ansprechpartner-Karte */
  .ms-personCard {
    margin-top: 18px;
    max-width: 980px;

    display: grid;
    grid-template-columns: 180px 1fr;
    gap: 28px;
    align-items: center;

    background: var(--brand-white);
    border-radius: 14px;
    box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
    padding: 26px 28px;
  }

  /* Astro <Image/> rendert ein <img> -> class kommt am img an */
  .ms-personCard__img {
    width: 160px;
    height: 160px;
    border-radius: 999px;
    object-fit: cover;
    justify-self: start;
  }

  .ms-personCard__rows {
    display: grid;
    gap: 10px;
    margin-top: 6px;
  }

  .ms-row {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: inherit;
  }

  .ms-row :global(svg) {
    color: var(--brand-green);
    flex: 0 0 auto;
  }

  /* Telefon-Link grün wie Bild 1 – ohne Typo overrides */
  .ms-row--link {
    color: var(--brand-green);
  }
  .ms-row--link:hover {
    text-decoration: underline;
  }

  /* Standorte Grid */
  .ms-locations {
    margin-top: 22px;
    max-width: 980px;

    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 28px;
  }

  .ms-locCard {
    background: var(--brand-white);
    border-radius: 14px;
    box-shadow: 0 8px 18px rgba(0, 0, 0, 0.08);
    padding: 22px 24px;
  }

  .ms-locCard__head {
    display: grid;
    grid-template-columns: 28px 1fr;
    gap: 14px;
    align-items: start;
  }

  .ms-locCard__icon {
    color: var(--brand-green);
    margin-top: 4px;
  }

  .ms-locCard__text {
    margin-top: 14px;
  }

  @media (max-width: 900px) {
    .ms-personCard {
      grid-template-columns: 1fr;
      justify-items: start;
    }

    .ms-personCard__img {
      width: 120px;
      height: 120px;
    }

    .ms-locations {
      grid-template-columns: 1fr;
    }
  }
</style>
